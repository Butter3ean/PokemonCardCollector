<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokecardbackground"
    tools:context="fragments.InfoFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp">

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/card_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvDexNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/national_dex_no"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvSetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/set_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/artist"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/price"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvCardRarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/rarity"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/tvCardFlavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/card_type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="6dp"/>

    </GridLayout>

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="411dp"
        android:layout_height="500dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/__hires"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/image_of_pokemon_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>